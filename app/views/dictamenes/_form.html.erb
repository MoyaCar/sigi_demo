<%= form_with(model: [expediente, dictamen], local: true) do |form| %>
  <div class="form-group form-row row">
    <%= form.label :identificador, class: 'col-2 col-form-label' %>
    <%= form.text_field :identificador, class: 'col-10 form-control' %>
  </div>

  <div class="form-group form-row row">
    <%= form.label :texto, class: 'col-2 col-form-label' %>
    <div class="col-10">
      <%= form.rich_text_area :texto, class: 'trix-content form-control' %>
    </div>
  </div>

  <p>
    <%= form.submit class: 'btn btn-dark' %>
  </p>
<% end %>
