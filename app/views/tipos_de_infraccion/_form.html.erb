<%= form_with(model: tipo_de_infraccion, local: true) do |form| %>
  <div class="form-group form-row row">
    <%= form.label :identificador, class: 'col-2 col-form-label' %>
    <%= form.text_field :identificador, class: 'col-10 form-control' %>
  </div>

  <div class="form-group form-row row">
    <%= form.label :descripcion, class: 'col-2 col-form-label' %>
    <%= form.text_field :descripcion, class: 'col-10 form-control' %>
  </div>

  <p>
    <%= form.submit class: 'btn btn-dark' %>
  </p>
<% end %>
