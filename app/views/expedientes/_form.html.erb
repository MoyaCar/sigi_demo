<%= form_with(model: @expediente, local: true) do |form| %>
  <div class="form-group form-row">
    <%= form.label :identificador, class: 'col-12 col-xl-1 col-form-label' %>
    <%= form.text_field :identificador, class: 'col-12 col-xl-11 form-control' %>
  </div>

  <div class="form-group form-row">
    <%= form.label :tipo_de_documento, class: 'col-12 col-xl-1 col-form-label' %>
    <%= form.text_field :tipo_de_documento, class: 'col-12 col-xl-11 form-control' %>
  </div>

  <div class="form-group form-row">
    <%= form.label :referencia, class: 'col-12 col-xl-1 col-form-label' %>
    <%= form.text_field :referencia, class: 'col-12 col-xl-11 form-control' %>
  </div>

  <%= render 'adjuntos/form', form: form %>

  <p>
    <%= form.submit class: 'btn btn-dark' %>
  </p>
<% end %>
